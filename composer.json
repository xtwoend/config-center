{
    "name": "xtwoend/config-center",
    "description": "Simple config center client for hyperf & nano",
    "license": "MIT",
    "keywords": [
        "php",
        "swoole",
        "hyperf",
        "config",
        "configuration"
    ],
    "require": {
        "php": ">=7.4",
        "psr/container": "^1.0",
        "hyperf/contract": "~2.0.0",
        "hyperf/guzzle": "~2.0.0"
    },
    "require-dev": {
        "hyperf/config": "~2.0.0",
        "hyperf/event": "~2.0.0",
        "hyperf/framework": "~2.0.0",
        "hyperf/process": "~2.0.0",
        "malukenho/docheader": "^0.1.6",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^7.0.0",
        "friendsofphp/php-cs-fixer": "^2.9"
    },
    "suggest": {
        "hyperf/process": "Use hyperf process to run ConfigFetcherProcess."
    },
    "autoload": {
        "psr-4": {
            "Xtwoend\\ConfigCenter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XtwoendTest\\ConfigCenter\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        },
        "hyperf": {
            "config": "Xtwoend\\ConfigCenter\\ConfigProvider"
        }
    },
    "bin": [
    ],
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "test": "phpunit --colors=always"
    }
}
